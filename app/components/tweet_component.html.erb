<div class="flex items-start w-full mb-1.5">
  <%= link_to render(AvatarComponent.new(user: tweet.author)), url, class: "flex-shrink-0" %>
  <div class="ml-2.5 text-sm">
    <div class="space-x-3 flex items-center">
      <span class="font-semibold text-gray-900"><%= link_to tweet.author.name, url, class: "hover:underline" %></span>
      <span class="text-gray-500">@<%= link_to tweet.author.username, url %></span>
      <span class="text-gray-500"><%= time_ago_in_words tweet.created_at %></span>
      <% if retweet? %>
        <span class="text-gray-500 inline-flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 00-3.7-3.7 48.678 48.678 0 00-7.324 0 4.006 4.006 0 00-3.7 3.7c-.017.22-.032.441-.046.662M19.5 12l3-3m-3 3l-3-3m-12 3c0 1.232.046 2.453.138 3.662a4.006 4.006 0 003.7 3.7 48.656 48.656 0 007.324 0 4.006 4.006 0 003.7-3.7c.017-.22.032-.441.046-.662M4.5 12l3 3m-3-3l-3 3" />
          </svg>
          by <%= tweet.user.name %>
        </span>
      <% end %>
    </div>
    <%= link_to tweet, class: "block text-gray-800 mt-0.5" do %>
      <%= simple_format tweet.body %>
    <% end %>
    <div class="mt-3 flex items-center justify-between text-gray-400 max-w-xs">
      <%= render(RepliesComponent.new(tweet: tweet)) %>

      <%= render(RetweetComponent.new(tweet: tweet)) %>

      <%= render(LikeComponent.new(tweet: tweet)) %>

      <span class="flex items-center" title="Share">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      </span>

    </div>
  </div>
</div>
