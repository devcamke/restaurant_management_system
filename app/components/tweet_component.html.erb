<div class="flex items-start w-full mb-1.5">
  <%= link_to render(AvatarComponent.new(user: tweet.user)), url, class: "flex-shrink-0" %>
  <div class="ml-2.5 text-sm">
    <div class="space-x-3">
      <span class="font-semibold text-gray-900"><%= link_to tweet.user.name, url, class: "hover:underline" %></span>
      <span class="text-gray-500">@<%= link_to tweet.user.username, url %></span>
      <span class="text-gray-500"><%= time_ago_in_words tweet.created_at %></span>
    </div>
    <div class="text-gray-800 mt-0.5">
      <%= simple_format tweet.body %>
    </div>
  </div>
</div>
